<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_blue"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:text="Milline president oli Eesti Vabariigil 90-datel aastatel?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="42sp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/questionAnswerGroup"
                android:layout_width="fill_parent"
                android:layout_height="222dp"
                android:orientation="vertical" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp" android:layout_marginTop="10dp">

        <RadioButton
                android:id="@+id/questionAnswer0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textColor="@android:color/background_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="32sp"/>

        <RadioButton
                android:id="@+id/questionAnswer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_light"
                android:text="RadioButton"
                android:textSize="32sp"/>

        <RadioButton
                android:id="@+id/questionAnswer2"
                android:layout_width="match_parent"
                android:textColor="@android:color/background_light"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textSize="32sp"/>

        <RadioButton
                android:id="@+id/questionAnswer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/background_light"
                android:text="RadioButton"
                android:textSize="32sp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/reset"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_popup_sync"/>

            <ImageButton
                    android:id="@+id/questionForward"
                    style="@android:style/Widget.Holo.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_media_play"/>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>